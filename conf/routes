# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                       controllers.Application.index

# REST API

GET           /networks/              controllers.REST.networks
POST          /networks/              controllers.REST.newNetwork
DELETE        /networks/:id           controllers.REST.deleteNetwork(id: Long)

GET           /nodes/                 controllers.REST.nodes
POST          /nodes/                 controllers.REST.newNodes
DELETE        /nodes/:id              controllers.REST.deleteNodes(id: Long)

GET           /initTimes/             controllers.REST.initTimes
POST          /initTimes/             controllers.REST.newInitTimes
DELETE        /initTimes/:id          controllers.REST.deleteInitTimes(id: Long)

GET           /coordinates/           controllers.REST.coordinates
POST          /coordinates/           controllers.REST.newCoordinates
DELETE        /coordinates/:id        controllers.REST.deleteCoordinates(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file           controllers.Assets.at(path="/public", file)
